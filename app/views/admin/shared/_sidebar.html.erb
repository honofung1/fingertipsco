<!-- Main Sidebar Container -->
 <aside class="main-sidebar sidebar-dark-primary elevation-4 sidebar_add">
   <!-- Brand Logo -->
   <%= link_to admin_root_path, class:"brand-link" do %>
     <%= image_tag 'f_icon.png', class: 'brand-image img-circle elevation-3' %>
     <span class="brand-text font-weight-light">Fingertips Co</span> <!-- TODO: change to ENV -->
   <% end %>
 
   <!-- Sidebar -->
   <div class="sidebar">
     <!-- Sidebar user panel (optional) -->
     <div class="user-panel mt-3 pb-3 mb-3 d-flex">
       <div class="image">
         <%= image_tag current_user.avatar_url, class: 'img-circle elevation-2' %>
       </div>
       <div class="info">
         <a href="#" class="d-block"><%= current_user.decorate.full_name %></a>
       </div>
     </div>
 
     <!-- Sidebar Menu -->
     <nav class="mt-2">
       <ul class="nav nav-pills nav-sidebar nav-child-indent flex-column nav-collapse-hide-child" data-widget="treeview" role="menu" data-accordion="false">

        <!-- Order -->
        <li class="nav-header"><%= t("sidebar.order_header") %></li>

        <li class="nav-item has-treeview">
          <%= link_to '#', class: "nav-link" do %>
            <i class="nav-icon fa fa-shopping-cart"></i>
            <p>
              <%= t("sidebar.order") %>
              <i class="right fas fa-angle-left"></i>
            </p>
          <% end %>

          <ul class="nav nav-treeview" style="display: none;">
            <li class="nav-item">
              <%= link_to admin_orders_path, class: "nav-link" do %>
                <i class="nav-icon fa fa-truck"></i>
                <%= content_tag :p, t("sidebar.order") %>
              <% end %>
            </li>

            <% show_order_in_sidear.each do |o| %>
              <li class="nav-item">
                <%= link_to admin_order_owner_orders_path(o.id, type: "prepaid"), class: "nav-link" do %>
                  <i class="nav-icon fa fa-bookmark"></i>
                  <%= content_tag :p, "#{o.name}#{t("sidebar.order")}" %>
                <% end %>
              </li>
            <% end %>

          </ul>
        </li>

        <!-- Order Owner -->
        <li class="nav-item">
          <%= link_to admin_order_owners_path, class: "nav-link" do %>
            <i class="nav-icon fa fa-id-badge"></i>
            <%= content_tag :p, t("sidebar.order_owner") %>
          <% end %>
        </li>

        <% if current_user.super_admin? %>
          <!-- Deposit Record -->
          <li class="nav-item">
            <%= link_to admin_deposit_records_path, class: "nav-link" do %>
              <i class="nav-icon fa fa-credit-card"></i>
              <%= content_tag :p, t("sidebar.deposit_record") %>
            <% end %>
          </li>
        <% end %>

        <!-- Bid record -->
        <li class="nav-header"><%=t("sidebar.bidrecord_header") %></li>
        <li class="nav-item">
          <%= link_to '#', class: "nav-link" do %>
            <i class="nav-icon fa fa-archive"></i>
            <%= content_tag :p, t("sidebar.bidrecord") %>
          <% end %>
        </li>

        <!-- Report -->
        <li class="nav-header"><%=t("sidebar.report") %></li>
        <li class="nav-item">
          <%= link_to admin_reports_path, class: "nav-link" do %>
            <i class="nav-icon far fa-file-excel"></i>
            <%= content_tag :p, t("sidebar.report") %>
          <% end %>
        </li>

        <!-- Import report -->
        <li class="nav-item">
          <%= link_to '#', class: "nav-link" do %>
            <i class="nav-icon fa fa-upload"></i>
            <%= content_tag :p, t("sidebar.import_report") %>
          <% end %>
        </li>

        <!-- Export report -->
        <li class="nav-item">
          <%= link_to '#', class: "nav-link" do %>
            <i class="nav-icon fa fa-paper-plane"></i>
            <%= content_tag :p, t("sidebar.export_report") %>
          <% end %>
        </li>


        <% if current_user.super_admin? %>
          <!-- Admin user -->
          <li class="nav-header"><%=t("sidebar.admin_header") %></li>

          <li class="nav-item">
            <%= link_to admin_admins_path, class: "nav-link" do %>
              <i class="nav-icon far fa-user"></i>
              <%= content_tag :p, t("sidebar.admin_user") %>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to admin_system_settings_path, class: "nav-link" do %>
              <i class="nav-icon fa fa-cogs"></i>
              <%= content_tag :p, t("sidebar.system_setting") %>
            <% end %>
          </li>
        <% end %>

       </ul>
     </nav>
     <!-- /.sidebar-menu -->
   </div>
   <!-- /.sidebar -->
 </aside>