<p id="notice"><%= notice %></p>
<section class="content">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">

          <dl class="dl-horizontal">

            <dt><%= Admin.human_attribute_name(:name) %>:</dt>
            <dd><%= @admin.name %></dd>

            <dt><%= Admin.human_attribute_name(:username) %>:</dt>
            <dd><%= @admin.username %></dd>

            <dt><%= Admin.human_attribute_name(:role) %>:</dt>
