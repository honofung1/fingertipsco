<p id="notice"><%= notice %></p>
<section class="content">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">

          <dl class="dl-horizontal">

            <dt><%= OrderOwner.human_attribute_name(:name) %>:</dt>
            <dd><%= @order_owner.name %></dd>

            <dt><%= OrderOwner.human_attribute_name(:order_code_prefix) %>:</dt>
            <dd><%= @order_owner.order_code_prefix %></dd>

            <dt><%= OrderOwner.human_attribute_name(:addresses) %>:</dt>
            <dd><%= @order_owner.addresses %></dd>

            <dt><%= OrderOwner.human_attribute_name(:telephone) %>:</dt>
            <dd><%= @order_owner.telephone %></dd>

            <% if @order_owner.key_account? %>
              <dt><%= OrderOwner.human_attribute_name(:handling_fee) %>:</dt>
              <dd><%= @order_owner.handling_fee %></dd>

              <dt><%= OrderOwner.human_attribute_name(:minimum_consumption_amount) %>:</dt>
              <dd><%= @order_owner.minimum_consumption_amount %></dd>

              <dt><%= OrderOwner.human_attribute_name(:minimum_handling_fee) %>:</dt>
              <dd><%= @order_owner.minimum_handling_fee %></dd>

              <dt><%= OrderOwner.human_attribute_name(:maximum_consumption_amount) %>:</dt>
              <dd><%= @order_owner.maximum_consumption_amount %></dd>

              <dt><%= OrderOwner.human_attribute_name(:maximum_handling_fee) %>:</dt>
              <dd><%= @order_owner.maximum_handling_fee %></dd>

              <dt><%= OrderOwner.human_attribute_name(:enable_minimum_consumption) %>:</dt>
              <dd><%= format_boolean(@order_owner.enable_minimum_consumption) %></dd>

              <dt><%= OrderOwner.human_attribute_name(:enable_maximum_consumption) %>:</dt>
              <dd><%= format_boolean(@order_owner.enable_maximum_consumption) %></dd>

              <dt><%= OrderOwner.human_attribute_name(:balance_limit) %>:</dt>
              <dd><%= @order_owner.balance_limit %></dd>

              <dt><%= OrderOwner.human_attribute_name(:balance) %>:</dt>
              <dd><%= @order_owner.balance %></dd>
            <% end %>

          </dl>

        </div>
      </div>
    </div>
  </div>

  <%= link_to t(:'button.edit'), edit_admin_order_owner_path(@order_owner), class: 'btn btn-default' %>
  <%= link_to t(:'button.back'), admin_order_owners_path, class: 'btn btn-default' %>
</section>