<p id="notice"><%= notice %></p>
<section class="content">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">

          <dl class="dl-horizontal">

            <dt><%= OrderOwner.human_attribute_name(:name) %>:</dt>
            <dd><%= @order_owner.name %></dd>

            <dt><%= OrderOwner.human_attribute_name(:order_code_prefix) %>:</dt>
            <dd><%= @order_owner.order_code_prefix %></dd>

            <dt><%= OrderOwner.human_attribute_name(:addresses) %>:</dt>
            <dd><%= @order_owner.addresses %></dd>

            <dt><%= OrderOwner.human_attribute_name(:telephone) %>:</dt>
            <dd><%= @order_owner.telephone %></dd>

            <dt><%= OrderOwner.human_attribute_name(:handling_fee) %>:</dt>
            <dd><%= @order_owner.handling_fee %></dd>

            <dt><%= OrderOwner.human_attribute_name(:balance) %>:</dt>
