<% content_for(:title, t('order_owner.title')) %>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">&nbsp;</h3>
        </div>
        <!-- box header -->

        <% if @order_owners.present? %>
          <div class="box-body table-responsive no-padding table-index-page" >
            <!-- rednering -->
            <table class="table table-hover table-bordered" role='datatable' >
              <thead>
                <tr>
                  <th><%= t('order_owner.name') %></th>
                  <th><%= t('order-owner.order_code_prefix') %></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @order_owners.each do |o| %>
                  <tr>
                    <td><%= o.name %></td>
                    <td><%= o.order_code_prefix %></td>
                    <td>
                      <div class = "button-group" > <!-- not using class btn-group to split the button-->
                        <%= link_to_btn admin_order_owner_path(o), 'show' %>
                        <%= link_to_btn edit_admin_order_owner_path(o), 'edit' %>
                        <%= link_to_btn admin_order_owner_path(o), 'delete', method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
        <!-- /.box-body -->

    </div>
    <!-- /.col-md-12 -->
  </div>
  <!-- rendering -->
</section>