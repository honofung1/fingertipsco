<div class="row">
  <div class="col-md-7">
    <div class="card card-outline card-primary">
      <div class="card-header">
        <h3 class="card-title"><%= f.label :basic_information %></h3>
      </div>
      <div class="card-body">
        <%= f.input :name %>
        <%= f.input :order_code_prefix %>
        <%= f.input :telephone %>
        <%= f.input :addresses %>
        <% if @order_owner.key_account? %>
          <%= f.input :handling_fee %>
          <%= f.input :minimum_consumption_amount %>
          <%= f.input :minimum_handling_fee %>
          <%= f.input :maximum_consumption_amount %>
          <%= f.input :maximum_handling_fee %>

          <div class="form-group">
            <%= f.check_box :enable_minimum_consumption %>
            <%= f.label :enable_minimum_consumption %>
          </div>

          <div class="form-group">
            <%= f.check_box :enable_maximum_consumption %>
            <%= f.label :enable_maximum_consumption %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-5">
    <div class="card bg-transparent border-0">
      <div class="actions">
        <%= f.submit class: "btn btn-block btn-lg btn-success float-right" %>
      </div>
    </div>
    <% if @order_owner.key_account? %>
      <div class="card card-outline card-info">
        <div class="card-header">
          <h3 class="card-title"><%= f.label :order_owner_account %></h3>
          <div class="card-tools pull-right">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
              <i class="fas fa-minus"></i>
            </button>
          </div>
        </div>

        <div class="card-body">
          <div class="form-group">
            <div class="form-group container-group">
              <%= f.simple_fields_for :order_owner_account do |account| %>
                <%= account.input :email %>
                <%= account.input :password %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>