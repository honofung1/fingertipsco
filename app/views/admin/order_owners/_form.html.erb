<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <%= f.input :name, placeholder: t(:'order_owner.name') %>
        <%= f.input :order_code_prefix, placeholder: t(:'order_owner.order_code_prefix') %>
      </div>

      <div class="card-footer">
        <div class="actions">
