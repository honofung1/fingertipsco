              <th class="col-md-6"><%= Order.human_attribute_name(:hk_tracking_number) %>:</th>
              <td><%= @order.hk_tracking_number %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:tracking_number) %>:</th>
              <td><%= @order.tracking_number %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:ship_date) %>:</th>
              <td><%= format_date(@order.ship_date) %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:order_finished_at) %>:</th>
              <td><%= format_date(@order.order_finished_at) %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:remark) %>:</th>
              <td><%= @order.remark %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:ready_to_ship) %>:</th>
