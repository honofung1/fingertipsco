          </table>
        </div>
      </div>
    </div>
  </div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= Order.human_attribute_name(:order_products) %></h3>
        <div class="card-tools"></div>
      </div>

      <div class="card-body">
        <table class="table table-striped col-md-12">
          <tr>
            <th><%= OrderProduct.human_attribute_name(:shop_from) %></th>
            <th><%= OrderProduct.human_attribute_name(:product_name) %></th>
            <th><%= OrderProduct.human_attribute_name(:product_remark) %></th>
            <th><%= OrderProduct.human_attribute_name(:product_quantity) %></th>
            <th><%= OrderProduct.human_attribute_name(:product_price) %></th>
            <th><%= OrderProduct.human_attribute_name(:product_cost) %></th>
            <th><%= OrderProduct.human_attribute_name(:shipment_cost) %></th>
            <th><%= OrderProduct.human_attribute_name(:discount) %></th>
            <th><%= OrderProduct.human_attribute_name(:total_cost) %></th>
            <th><%= OrderProduct.human_attribute_name(:receipt_date) %></th>
          </tr>
        <% @order.order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.shop_from %></td>
            <td><%= order_product.product_name %></td>
            <td><%= order_product.product_remark %></td>
            <td><%= order_product.product_quantity %></td>
            <td><%= order_product.product_price %></td>
            <td><%= order_product.product_cost %></td>
            <td><%= order_product.shipment_cost %></td>
            <td><%= order_product.discount %></td>
            <td><%= order_product.total_cost %></td>
            <td><%= format_date(order_product.receipt_date) %></td>
          </tr>
        <% end %>
        </table>

      </div>
    </div>
  </div>
</div>

  <%= link_to t(:'button.edit'), edit_admin_order_owner_order_path(@order_owner, @order), class: 'btn btn-default' %>
  <%= link_to t(:'button.back'), admin_order_owner_orders_path(@order_owner, type: "prepaid"), class: 'btn btn-default' %>
</section>