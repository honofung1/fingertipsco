<p id="notice"><%= notice %></p>
<section class="content">
  <div class="row">
    <div class="col-md-8">
      <div class="card">

        <div class="card-header">
          <h3 class="card-title"><%= Order.model_name.human %></h3>
          <div class="card-tools"></div>
        </div>

        <div class="card-body">
          <table class="table table-striped alnright">
            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:state) %>:</th>
