            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:order_id) %>:</th>
              <td><%= @order.order_id %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:customer_name) %>:</th>
              <td><%= @order.customer_name %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:customer_contact) %>:</th>
              <td><%= @order.customer_contact %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:customer_address) %>:</th>
              <td><%= @order.customer_address %></td>
            </tr>

            <tr>
              <th class="col-md-6"><%= Order.human_attribute_name(:handling_amount) %>:</th>
              <td><%= @order.handling_amount %></td>
            </tr>

