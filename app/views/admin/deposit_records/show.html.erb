<p id="notice"><%= notice %></p>
<section class="content">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">

          <dl class="dl-horizontal">

            <dt><%= DepositRecord.human_attribute_name(:order_owner) %>:</dt>
            <dd><%= @deposit_record.order_owner.name %></dd>

            <dt><%= DepositRecord.human_attribute_name(:deposit_amount) %>:</dt>
            <dd><%= @deposit_record.deposit_amount %></dd>

            <dt><%= DepositRecord.human_attribute_name(:deposit_date) %>:</dt>
            <dd><%= format_date(@deposit_record.deposit_date) %></dd>

          </dl>

        </div>
      </div>
    </div>
  </div>

  <%= link_to t(:'button.edit'), edit_admin_deposit_record_path(@deposit_record), class: 'btn btn-default' %>
  <%= link_to t(:'button.back'), admin_deposit_records_path, class: 'btn btn-default' %>
</section>