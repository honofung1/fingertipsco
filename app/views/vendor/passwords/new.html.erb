<% content_for(:title, '忘記密碼') %>
  <div class="login-box">
    <div class="login-logo">
      <a href=""><h1>開始重設<b>密碼</b></h1></a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
      <div class="card-body login-card-body">

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <%= f.label :email, t('defaults.email') %>
          <div class="input-group mb-3">
            <%= f.text_field :email, class: 'form-control', placeholder: t('defaults.email') %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <%= f.submit (t 'devise.passwords.new.continue'), class: 'btn btn-block btn-primary' %>
            </div>
          </div>
        <% end %>
        <br>

        <%= render "vendor/shared/links" %>
      </div>
    </div>
  </div>